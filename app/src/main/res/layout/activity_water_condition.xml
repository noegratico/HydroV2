<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/hello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Water Condition"
            android:textSize="35dp"
            android:textStyle="bold"
            android:theme="@style/text" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/settingBtn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="13dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ic_baseline_settings_24" />
        </RelativeLayout>


    </LinearLayout>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/temperLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:justifyContent="space_between"
        app:layout_constraintTop_toBottomOf="@id/textView">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tempHolder"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#6cbce2"
            app:layout_flexBasisPercent="40%">

            <TextView
                android:id="@+id/phDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:textAlignment="center"
                android:text="..."
                android:autoSizeTextType="uniform"
                android:textColor="@color/white"
                android:textSize="50dp" />
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            app:layout_flexBasisPercent="60%"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recentTxt"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:text="Recent"
                android:textSize="20dp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/phRecycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </com.google.android.flexbox.FlexboxLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="ph Level"
        android:textSize="20dp"
        android:textStyle="bold"
        android:theme="@style/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hello" />

    <TextView
        android:id="@+id/humidityTxt"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="ECC Level"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temperLayout" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/humidityLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:justifyContent="space_between"
        app:layout_constraintTop_toBottomOf="@id/humidityTxt">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/humidityHolder"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:layout_marginTop="16dp"
            app:layout_flexBasisPercent="40%"
            android:backgroundTint="#6cbce2">

            <TextView
                android:id="@+id/eccDisplay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30dp"
                android:paddingTop="10dp"
                android:text="..."
                android:textAlignment="center"
                android:autoSizeTextType="uniform"
                android:textColor="@color/white"
                android:textSize="50dp" />
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            app:layout_flexBasisPercent="60%"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recentTxt1"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:text="Recent"
                android:textSize="20dp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/eccRecent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </com.google.android.flexbox.FlexboxLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/viewAllDataBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:textColor="@color/white"
        android:text="View all data"
        android:backgroundTint="#1C7A6A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/humidityLayout" />

    <ImageButton
        android:id="@+id/reportSpecBtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#1C7A6A"
        android:src="@drawable/ic_baseline_file_present_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toEndOf="@+id/viewAllDataBtn"
        app:layout_constraintTop_toBottomOf="@+id/humidityLayout"
        app:layout_constraintVertical_bias="0.288" />-->

</androidx.constraintlayout.widget.ConstraintLayout>